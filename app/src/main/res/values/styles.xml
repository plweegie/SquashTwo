<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for tabs -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance for tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#D7CCC8</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
    </style>

</resources>